<launch>
  <!-- Arguments -->
  <arg name="open_rviz" default="true"/>
  <arg name="use_robot_name1" default="robot1"/>
  <arg name="use_robot_name2" default="robot2"/>

  <arg name="first_robot_x_pos" default="300.0"/>
  <arg name="first_robot_y_pos" default="-140.0"/>
  <arg name="first_robot_z_pos" default="0.0"/>
  <arg name="first_robot_yaw"   default="0.0"/>

  <arg name="second_robot_x_pos" default="-240.0"/>
  <arg name="second_robot_y_pos" default="160.0"/>
  <arg name="second_robot_z_pos" default="0.0"/>
  <arg name="second_robot_yaw"   default="0.0"/>

  <group ns="/$(arg use_robot_name1)/map_merge">
    <param name="init_pose_x" value="$(arg first_robot_x_pos)"/>
    <param name="init_pose_y" value="$(arg first_robot_y_pos)"/>
    <param name="init_pose_z" value="$(arg first_robot_z_pos)"/>
    <param name="init_pose_yaw" value="$(arg first_robot_yaw)"/>
  </group>

  <group ns="/$(arg use_robot_name2)/map_merge">
    <param name="init_pose_x" value="$(arg second_robot_x_pos)"/>
    <param name="init_pose_y" value="$(arg second_robot_y_pos)"/>
    <param name="init_pose_z" value="$(arg second_robot_z_pos)"/>
    <param name="init_pose_yaw" value="$(arg second_robot_yaw)"/>
  </group>

  <group ns="$(arg use_robot_name1)">
    <param name="tf_prefix" value="$(arg use_robot_name1)"/>
    <include file="$(find multi_robot_slam)/launch/gmapping.launch">
      <arg name="use_robot_name" value="$(arg use_robot_name1)"/>
    </include>
  </group>

  <group ns="$(arg use_robot_name2)">
    <param name="tf_prefix" value="$(arg use_robot_name2)"/>
    <include file="$(find multi_robot_slam)/launch/gmapping.launch">
      <arg name="use_robot_name" value="$(arg use_robot_name2)"/>
    </include>
  </group>

<!--
  <node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge" output="screen">
        <param name="known_init_poses" value="false" />
        <param name="merged_map_topic" value="merged_map" />
        <param name="estimation_rate" value=".1" />
        <param name="world_frame" value="map"/>
        <param name="robot_map_topic" value="map"/>
        <param name="robot_namespace" value="robot"/>
  </node> -->


  <node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge" output="screen">
    <param name="robot_map_topic" value="map"/>
    <param name="robot_namespace" value="robot"/>
    <param name="merged_map_topic" value="map"/>
    <param name="world_frame" value="map"/>
    <param name="known_init_poses" value="true"/>
    <param name="merging_rate" value="0.5"/>
    <param name="discovery_rate" value="0.5"/>
    <param name="estimation_rate" value="0.1"/>
    <param name="estimation_confidence" value="1.0"/>
  </node>


  <!--
  <node pkg="tf" type="static_transform_publisher" name="world_to_$(arg use_robot_name1)_tf_broadcaster" args="4.8 7 0 1.57 0 0 /map /$(arg use_robot_name1)/map 1000"/>
  <node pkg="tf" type="static_transform_publisher" name="world_to_$(arg use_robot_name2)_tf_broadcaster" args="4.8 22 0 1.57 0 0 /map /$(arg use_robot_name2)/map 1000"/> -->
  

